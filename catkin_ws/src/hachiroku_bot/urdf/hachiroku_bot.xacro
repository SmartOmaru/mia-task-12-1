<?xml version="1.0"?>

<robot name="hachiroku_bot" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:property name="base_length"  value="1"/>
    <xacro:property name="base_width"   value="1"/>
    <xacro:property name="base_height"  value="1"/>
    <xacro:property name="wheel_radius" value="0.05"/>
    <xacro:property name="wheel_length" value="0.02"/>

    <xacro:macro name="wheel" params="name x y z">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
        <origin xyz="${x} ${y} ${z}" rpy="1.5708 0 0"/>
        <material name="black"/>
      </visual>
    </link>

    <joint name="${name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
            <origin xyz="0 0 0.1"/>
        </visual>
    </link>

    <xacro:wheel name="front_left_wheel" x="0.3" y="0.2" z="0.1"/>
    <xacro:wheel name="front_right_wheel" x="0.3" y="-0.2" z="0.1"/>
    <xacro:wheel name="rear_left_wheel" x="-0.3" y="0.2" z="0.1"/>
    <xacro:wheel name="rear_right_wheel" x="-0.3" y="-0.2" z="0.1"/>
</robot>
